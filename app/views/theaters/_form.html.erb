<%= link_to 'back' ,marchant_users_path,class: "btn btn-primary" %>
<div class="container h-100">
    <div class="row">
        <div class="col-lg-offset-3 col-lg-6 col-md-offset-3 col-md-6 col-sm-12 col-xs-12"> 
        <div id="banner"> 
            <div class="user_card">
       
              <%= form_with scope: :theater, url: theaters_path, local: true do |form| %>
                            <div class="form-group">
                                    <label class="group" > Name</label>
                                    <td><%= form.text_field :name,class: "input" %></td>
                                </div>
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="form-group">
                                    <label class="group"> contact no</label>
                                    <td><%= form.text_field :contact_no,class: "input" %></td>
                                </div>
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                                <div class="form-group">
                                    <label class="group">address</label>
                                    <td><%= form.text_field :address,class: "input" %></td>
                                </div>
                            </div>
                              <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 text-center">
                            <td><%= form.submit "Save", class: "btn btn-primary" %></td>
                        </div>
                <% end %>
            </div>
            </div>
        </div>
    </div>
</div>