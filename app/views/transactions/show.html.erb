<div><%= link_to 'back' ,dashboard_index_path,class: "btn btn-success" %></div>
<div class="container h-100">
    <div class="row">
        <div class="col-lg-offset-3 col-lg-6 col-md-offset-3 col-md-6 col-sm-12 col-xs-12">  
            <div class="user_card">
                <form>
            		<h2>booking successfully!</h2>
            		<table border="2">
							<tr>
								<td>UserEmail:</td>
								<td><%= @transaction.user.email%></td>
							</tr>
							<tr>
								<td>TheaterName:</td>
								<td><%= @transaction.theater.name %></td>

							</tr>
							<tr>
								<td>MovieName:</td>
								<td><%= @transaction.movie.name  %></td>
							</tr>
							<tr>
								<td>MovieNamePrice:</td>
								<td><%= @transaction.movie.price  %></td>
							</tr>	
							<tr>
								<td>Timing:</td>
								<td><%= @transaction.timing.start_time %></td>
							</tr>	

							<tr>
								<td>quantity:</td>
								<td><%= @transaction.quantity %></td>
							</tr>
							<tr>
								<td>total_amount:</td>
								<td><%= @transaction.try(:total_amount)  %></td>
							</tr>
					</table>
				<form>
            </div>
        </div>
    </div>
</div>

