<div class="container">
	<div class="row">
		<div class="col-md-12 col-sm-12">
			<div class="content-container">
				<h1>THEATERS</h1>
				<table class="table">
				  <thead class="thead-dark">
				    <tr>
				      <th scope="col">#</th>
				      <th scope="col">name</th>
				      <th scope="col">contact_no</th>
				      <th scope="col">address</th>
				      <th colspan="2">Actions</th>
				    </tr>
				  </thead>
				  <tbody>
				  	<% @theaters.each do |movie| %>  
					    <tr>
					      <td><%= movie.id%></td>
					      <td><%= movie.name%></td>
					      <td><%= movie.contact_no %></td>
					      <td><%= movie.address %></td>
					      <td><%= link_to 'Show',   theater_path(movie) %></td>
					      <td><%= link_to 'Edit', edit_theater_path(movie) %></td>
					      <td><%= link_to 'delete'  %></td>
					    </tr>
					  <% end %>
				  </tbody>
				</table>
				<%= link_to 'Add New Theater', new_theater_path, class: "btn btn-success" %>
			</div>
		</div>
    </div>
</div>
